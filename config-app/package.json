{
  "name": "super-opencode",
  "version": "1.3.3",
  "description": "Super OpenCode 配置管理中心",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "publish": "electron-builder --publish always",
    "publish:mac": "electron-builder --mac --publish always",
    "publish:win": "electron-builder --win --publish always",
    "publish:linux": "electron-builder --linux --publish always",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:all": "npm test && npm run test:e2e",
    "build:client": "cd client && npx vite build",
    "dev:client": "cd client && npx vite"
  },
  "author": "Super OpenCode",
  "license": "MIT",
  "devDependencies": {
    "@electron/notarize": "^3.1.1",
    "@playwright/test": "^1.58.1",
    "dotenv": "^16.0.0",
    "electron": "^28.3.3",
    "electron-builder": "^24.9.1",
    "jest": "^30.2.0",
    "playwright-core": "^1.58.1",
    "png-to-ico": "^3.0.1"
  },
  "dependencies": {
    "electron-updater": "^6.7.3",
    "vue": "^3.4.0"
  },
  "build": {
    "appId": "com.superopencode.config",
    "productName": "Super OpenCode",
    "publish": {
      "provider": "github",
      "owner": "lengjingxu",
      "repo": "oh-my-opencode-releases",
      "releaseType": "release"
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "templates/**/*",
      "skills/**/*",
      "hooks/**/*",
      "tech-stacks/**/*",
      "!dist/**/*",
      "!scripts/**/*",
      "!feishu_bot/**/*",
      "!docs-internal/**/*"
    ],
    "extraResources": [
      {
        "from": "templates",
        "to": "templates"
      },
      {
        "from": "skills",
        "to": "skills"
      },
      {
        "from": "hooks",
        "to": "hooks"
      },
      {
        "from": "tech-stacks",
        "to": "tech-stacks"
      },
      {
        "from": "feishu_bot",
        "to": "feishu_bot",
        "filter": ["**/*.py", "**/*.toml", "**/*.sh", "**/*.plist", "**/requirements.txt"]
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "identity": "qitong zhang (B5GFJWXQJT)",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "icon": "assets/icon.png",
      "category": "Development",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
